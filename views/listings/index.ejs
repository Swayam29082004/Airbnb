<% layout('layouts/boilerplate') %>

<style>
    #filters{
       display: flex;
       flex-wrap:wrap ;
       
    }
    .filters{
      text-align: center;
      margin-right: 2rem; 
      /* margin-top: 0.5rem;  */
      opacity: 0.7;
    }
    .filters:hover{
        opacity:1 ;
        cursor: pointer;
    }
    .filters p{
        font-size: 0.8rem;
    }
</style>
<div id="filters">
    <div class="filters">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Beach</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountain</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Nature</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-city"></i></div>
        <p>City</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-dog"></i></div>
        <p>Pet Friendly</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Pool</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Resorts</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-building"></i></div>
        <p>Apartments</p>
    </div>
        
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing.id%>" class="listing-link">
        <div class="card col listing-card" style="width: 18rem;">
            <!-- Use the image URL directly if it's a string -->
            <img src="<%= listing.image.url || '/images/placeholder.png' %>" class="card-img-top" alt="listing_image" style="height:20rem">
            <div class="card-img-overlay">
                
              </div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title || 'Untitled Listing' %></b><br>
                    &#8377;<%= listing.price ? listing.price.toLocaleString('en-IN') : "N/A" %>
                </p>
            </div>
        </div>
    </a>
    <% } %>
</div>
